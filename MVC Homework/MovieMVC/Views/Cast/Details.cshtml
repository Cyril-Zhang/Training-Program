@model ApplicationCore.Entity.Casts

<div class="container mt-5">
    <!-- Actor Information -->
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ProfilePath" class="img-fluid" alt="@Model.Name Profile Picture" />
        </div>
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>TMDb URL:</strong> <a href="@Model.TmdbUrl" target="_blank">@Model.TmdbUrl</a></p>
        </div>
    </div>

    <!-- Movies Information -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Movies</h3>
            <ul class="list-group">
                @foreach (var movieCast in Model.MovieCasts)
                {
                    <li class="list-group-item">
                        <strong>@movieCast.Movie.Title</strong> as @movieCast.Character
                    </li>
                }
            </ul>
        </div>
    </div>
</div>