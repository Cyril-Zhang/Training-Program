@model ApplicationCore.Model.ResponseModel.MovieResponse

<div class="card mb-4">
    <img src="@Model.PosterUrl" class="card-img-top" alt="@Model.Title">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Overview</p>
        <a href="@Url.Action("Details", "Movies", new { id = Model.Id })" class="btn btn-primary">View Details</a>
    </div>
</div>

